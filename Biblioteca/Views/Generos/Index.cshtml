@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros Literários";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Gêneros Literários</h2>
                <a asp-action="Create" class="btn btn-success px-4">
                    <i class="bi bi-plus-lg"></i> Novo Gênero
                </a>
            </div>
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-sm btn-primary me-2">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Se estiver usando Bootstrap Icons, garanta que o link está no _Layout.cshtml -->
}
