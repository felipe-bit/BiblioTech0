@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Excluir Gênero</h3>
                </div>
                <div class="card-body">
                    <h5 class="mb-4 text-danger">Tem certeza que deseja excluir este gênero?</h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="GeneroId" />
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
