@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Excluir Livro</h3>
                </div>
                <div class="card-body">
                    <h5 class="mb-4 text-danger">Tem certeza que deseja excluir este livro?</h5>
                    <div class="row mb-3">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.UrlCapa))
                            {
                                <img src="~/@Model.UrlCapa" alt="Capa do Livro" class="img-thumbnail mb-2" style="max-height: 180px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sem capa</span>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Titulo)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Autor)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Autor)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descricao)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Editora)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Editora)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataPublicacao)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.DataPublicacao)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumeroPaginas)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroPaginas)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantidade)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantidade)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ISBN10)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN10)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ISBN13)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN13)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Genero)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Genero.Nome)</dd>
                            </dl>
                        </div>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="LivroId" />
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
