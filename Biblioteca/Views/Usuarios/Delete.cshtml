@model Biblioteca.Models.Usuario
@{
    ViewData["Title"] = "Excluir Usuário";
}

<div id="divUsuario" class="container bg-dark text-light mt-5 fs-5">
    <h4 class="text-center fs-3 text-light">Confirmação de Exclusão</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center fs-5 mb-4">
                Você está deletando este usuário PERMANENTEMENTE. Tem certeza que quer continuar?
            </div>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 d-flex align-items-center justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.UrlFoto))
                            {
                                <img src="@Url.Action("BuscarFoto", "Usuarios", new { id = Model.UsuarioId })"
                                     class="rounded-circle"
                                     style="width: 100px; height: 100px; object-fit: cover; border: 4px solid #000;" />
                            }
                        </div>
                        <div class="col-md-9">
                            <dl class="row mb-0 fs-6">
                                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.NomeCompleto)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.NomeCompleto)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.CPF)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.CPF)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Celular)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.Celular)</dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DataNascimento)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.DataNascimento)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="UsuarioId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light fs-5">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger fs-5">
                        <i class="bi bi-trash3"></i> Excluir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>